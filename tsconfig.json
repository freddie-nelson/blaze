{
  "compilerOptions": {
    "typeRoots": ["@types", "./node_modules/@types"],
    "module": "es6",
    "noImplicitAny": true,
    "outDir": "dist",
    "sourceMap": true,
    "rootDir": "./",
    "target": "es6",
    "declaration": true,
    "esModuleInterop": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*", "dev/**/*"],
  "exclude": ["node_modules"]
}
