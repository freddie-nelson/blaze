{
  "compilerOptions": {
    "typeRoots": ["@types", "./node_modules/@types"],
    "module": "commonjs",
    "target": "es5",
    "lib": ["es2015", "DOM"],
    "noImplicitAny": true,
    "rootDir": "./",
    "outDir": "lib",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
